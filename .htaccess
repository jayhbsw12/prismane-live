<IfModule mod_rewrite.c>
  RewriteEngine On
    # RewriteBase /prismane-live
  RewriteBase /


  # Ignore existing files and folders
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Remove .php extension from URLs (redirect .php to clean URLs)
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^(.+)\.php$ /$1 [R=301,L]

  # Blog slug routing - MUST come before generic page rewrite
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^([a-zA-Z0-9-]+)/?$ blog-details.php?slug=$1 [L,QSA]

  # Rewrite clean URLs to .php files (for regular pages only)
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_URI} !^/assets/
  RewriteCond %{REQUEST_URI} !^/PHPMailer/
  RewriteRule ^([a-zA-Z0-9/_-]+)/?$ $1.php [L,QSA]

</IfModule>
